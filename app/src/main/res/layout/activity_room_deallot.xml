<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    android:backgroundTint="#80121212"
    android:backgroundTintMode="src_atop"
    tools:context=".RoomAllotment">

    <ImageView
        android:id="@+id/returnButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/design_default_color_error"
        android:contentDescription="back button"
        android:padding="5dp"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:ignore="HardcodedText,RedundantDescriptionCheck,ImageContrastCheck" />

    <TableLayout
        android:id="@+id/tableLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#BF121212"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".25">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:shadowColor="@color/design_default_color_error"
                android:shadowRadius="25"
                android:text="Room Deallotment"
                android:textColor="#f2f2f2"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="#80B00020"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="Student Hostel ID"
                android:textAlignment="textEnd"
                android:textColor="#F2F2F2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/idDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#B00020"
                android:drawableStart="@drawable/icon_id"
                android:drawablePadding="5dp"
                android:drawableTint="#F2F2F2"
                android:drawingCacheQuality="auto"
                android:ems="5"
                android:enabled="false"
                android:importantForAutofill="no"
                android:inputType="text"
                android:minHeight="48dp"
                android:shadowColor="#B00020"
                android:shadowRadius="25"
                android:text="ID"
                android:textColor="#F2F2F2"
                android:textStyle="normal"
                tools:ignore="HardcodedText,LabelFor" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="#80B00020"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="Student Name"
                android:textAlignment="textEnd"
                android:textColor="#F2F2F2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/nameDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#B00020"
                android:drawableStart="@drawable/name_icon"
                android:drawablePadding="5dp"
                android:drawableTint="#F2F2F2"
                android:ems="7"
                android:enabled="false"
                android:importantForAutofill="no"
                android:inputType="text"
                android:minHeight="48dp"
                android:shadowColor="#B00020"
                android:shadowRadius="25"
                android:text="Name"
                android:textColor="#F2F2F2"
                android:textStyle="normal"
                tools:ignore="HardcodedText,LabelFor" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="#80B00020"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="Allotted Room"
                android:textAlignment="textEnd"
                android:textColor="#F2F2F2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/roomNumberDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#B00020"
                android:drawableStart="@drawable/room_icon"
                android:drawablePadding="5dp"
                android:drawableTint="#F2F2F2"
                android:drawingCacheQuality="auto"
                android:ems="5"
                android:enabled="false"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minHeight="48dp"
                android:shadowColor="#B00020"
                android:shadowRadius="25"
                android:text="Room Number"
                android:textColor="#F2F2F2"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />
        </TableRow>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/deallotButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_error"
            android:enabled="true"
            android:shadowColor="#121212"
            android:shadowRadius="10"
            android:text="De-allot room"
            android:textColor="#f2f2f2"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconGravity="textStart"
            app:iconTint="#F2F2F2"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText,VisualLintButtonSize,TextContrastCheck" />

    </TableLayout>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout4"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/prevButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_error"
            android:enabled="true"
            android:shadowColor="#121212"
            android:shadowRadius="10"
            android:text="Previous"
            android:textColor="#f2f2f2"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            app:icon="@android:drawable/ic_media_previous"
            app:iconGravity="textStart"
            app:iconTint="#F2F2F2"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText,VisualLintButtonSize,TextContrastCheck" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_error"
            android:enabled="true"
            android:shadowColor="#121212"
            android:shadowRadius="10"
            android:text="Next"
            android:textColor="#f2f2f2"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            app:icon="@android:drawable/ic_media_next"
            app:iconGravity="end"
            app:iconTint="#F2F2F2"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText,VisualLintButtonSize,TextContrastCheck" />
    </TableRow>


</androidx.constraintlayout.widget.ConstraintLayout>