<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    android:backgroundTint="#80121212"
    android:backgroundTintMode="src_atop"
    tools:context=".RoomAllotment">

    <ImageView
        android:id="@+id/returnButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="#03DAC5"
        android:contentDescription="back button"
        android:padding="5dp"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:ignore="HardcodedText,RedundantDescriptionCheck" />

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#BF121212"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".25">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:shadowColor="@color/teal_200"
                android:shadowRadius="25"
                android:text="Room Allotment"
                android:textColor="#f2f2f2"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#8003DAC5"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="Student Hostel ID"
                android:textAlignment="textEnd"
                android:textColor="#F2F2F2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/idDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_200"
                android:drawableStart="@drawable/icon_id"
                android:drawablePadding="5dp"
                android:drawableTint="#F2F2F2"
                android:drawingCacheQuality="auto"
                android:ems="5"
                android:enabled="false"
                android:importantForAutofill="no"
                android:inputType="text"
                android:minHeight="48dp"
                android:shadowColor="@color/teal_200"
                android:shadowRadius="25"
                android:text="ID"
                android:textColor="#F2F2F2"
                android:textStyle="normal"
                tools:ignore="HardcodedText,LabelFor" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#8003DAC5"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="Student Name"
                android:textAlignment="textEnd"
                android:textColor="#F2F2F2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/nameDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_200"
                android:drawableStart="@drawable/name_icon"
                android:drawablePadding="5dp"
                android:drawableTint="#F2F2F2"
                android:ems="7"
                android:enabled="false"
                android:importantForAutofill="no"
                android:inputType="text"
                android:minHeight="48dp"
                android:shadowColor="@color/teal_200"
                android:shadowRadius="25"
                android:text="Name"
                android:textColor="#F2F2F2"
                android:textStyle="normal"
                tools:ignore="HardcodedText,LabelFor" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#8003DAC5"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="Room Preference"
                android:textAlignment="textEnd"
                android:textColor="#F2F2F2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/typeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_200"
                android:drawableStart="@drawable/preferences"
                android:drawablePadding="5dp"
                android:drawableTint="#F2F2F2"
                android:ems="5"
                android:enabled="false"
                android:importantForAutofill="no"
                android:inputType="text"
                android:minHeight="48dp"
                android:shadowColor="@color/teal_200"
                android:shadowRadius="25"
                android:text="@string/room_type"
                android:textColor="#F2F2F2"
                android:textStyle="normal"
                tools:ignore="HardcodedText,LabelFor" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#8003DAC5"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="Select Room Number"
                android:textAlignment="textEnd"
                android:textColor="#F2F2F2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/roomSpinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/teal_200"
                tools:ignore="TouchTargetSizeCheck" />

        </TableRow>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/deallotButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:enabled="true"
            android:shadowColor="#121212"
            android:shadowRadius="10"
            android:text="Update"
            android:textColor="#f2f2f2"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            app:icon="@android:drawable/ic_menu_rotate"
            app:iconGravity="textStart"
            app:iconTint="#F2F2F2"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText,VisualLintButtonSize" />
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>