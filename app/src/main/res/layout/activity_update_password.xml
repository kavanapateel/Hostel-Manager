<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    android:backgroundTint="#BF121212"
    android:backgroundTintMode="src_atop"
    tools:context=".UpdatePassword">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="25dp"
        android:shadowColor="#121212"
        android:shadowRadius="10"
        android:text="Change Password"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/teal_200"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/icon_password"
        app:drawableTint="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="HardcodedText" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#80121212"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Old Password"
                android:textAlignment="textEnd"
                android:textAllCaps="true"
                android:textColor="@color/teal_200"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/verifyPassText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/teal_200"
                android:ems="8"
                android:hint="Old Password*"
                android:importantForAutofill="no"
                android:inputType="text|textPassword"
                android:minHeight="48dp"
                android:selectAllOnFocus="true"
                android:shadowColor="@color/teal_200"
                android:shadowRadius="25"
                android:textColor="#F2F2F2"
                android:textColorHint="@color/teal_200"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="New Password"
                android:textAlignment="textEnd"
                android:textAllCaps="true"
                android:textColor="@color/teal_200"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/setPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/teal_200"
                android:ems="8"
                android:hint="New Password*"
                android:importantForAutofill="no"
                android:inputType="text|textPassword"
                android:minHeight="48dp"
                android:selectAllOnFocus="true"
                android:shadowColor="@color/teal_200"
                android:shadowRadius="25"
                android:textColor="#F2F2F2"
                android:textColorHint="@color/teal_200"
                android:textStyle="bold"
                tools:ignore="HardcodedText,DuplicateSpeakableTextCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Retype New Password"
                android:textAlignment="textEnd"
                android:textAllCaps="true"
                android:textColor="@color/teal_200"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/retypeNewPassText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/teal_200"
                android:ems="8"
                android:hint="Retype Password*"
                android:importantForAutofill="no"
                android:inputType="text|textPassword"
                android:minHeight="48dp"
                android:selectAllOnFocus="true"
                android:shadowColor="@color/teal_200"
                android:shadowRadius="25"
                android:textColor="#F2F2F2"
                android:textColorHint="@color/teal_200"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Space
                android:layout_width="wrap_content"
                android:layout_height="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/changeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_200"
                android:fontFamily="sans-serif-condensed-medium"
                android:shadowColor="#121212"
                android:shadowRadius="10"
                android:text="Change"
                android:textStyle="bold"
                app:cornerRadius="25dp"
                app:icon="@android:drawable/ic_popup_sync"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconTint="#F2F2F2"
                app:iconTintMode="src_atop"
                app:rippleColor="#f2f2f2"
                tools:ignore="HardcodedText,TextContrastCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/cancelNewPassButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00B00020"
                android:fontFamily="sans-serif-condensed-medium"
                android:shadowColor="#121212"
                android:shadowRadius="10"
                android:text="@android:string/cancel"
                android:textColor="@color/design_default_color_error"
                android:textStyle="bold"
                app:cornerRadius="25dp"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconTint="@color/design_default_color_error"
                app:iconTintMode="screen"
                app:rippleColor="#121212"
                tools:ignore="HardcodedText,TextContrastCheck" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>